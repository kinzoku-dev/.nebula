{colors}: ''
  * {
      all: unset;
  }

  .txt {
      color: #${colors.base05};
  }

  .spotify, .spotify-child {
      background-color: #${colors.base00};
      min-width: 20rem;
      min-height: 11rem;
      padding: 1rem 1rem;
      border-radius: 10px;
      border: 2px solid #${colors.base0D};
  }
  .song-title {
      font-size: 1.25rem;
      font-weight: bold;
  }
  .song-info {
      padding-left: 10px;
  }

  .pause-play-button label {
      margin: 0 5px;
      font-size: 1.5rem;
      font-weight: bold;
  }

  .song-cover {
      min-height: 100px;
      min-width: 100px;
      background-size: cover;
      background-position: center;
  }
